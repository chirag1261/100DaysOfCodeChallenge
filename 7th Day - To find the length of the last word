class Solution {
    public int lengthOfLastWord(String s) {
        int n = s.length(),
        result = 0;
        while(n > 0){
            //removing the space character from the end
            if(s.charAt(--n) != ' ') 
                result++;
            else if
                (result > 0) return result;
        }
        return result;
    }
}


